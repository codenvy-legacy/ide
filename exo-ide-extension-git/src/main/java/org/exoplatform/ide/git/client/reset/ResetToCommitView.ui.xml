<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component"
   xmlns:e="urn:import:org.exoplatform.ide.git.client.commit">
   <ui:with field='resource' type='org.exoplatform.ide.git.client.GitClientBundle' />
   <ui:with field="locale" type="org.exoplatform.ide.git.client.GitLocalizationConstant"></ui:with>
   <ui:style>
      .spacingTop {
      	margin-top: 20px;
      }
      
      .spacingBottom {
      	margin-bottom: 10px;
      }
      
      .label {
      	margin-bottom: 3px;
      	font-size: 11px;
      	font-family: Verdana, Bitstream Vera Sans, sans-serif;
      	float: left;
      }
      
      .center {
      	display: block;
      	margin-left: auto;
      	margin-right: auto;
      }
      
      .floatLeft {
      	float: left;
      }
   </ui:style>

   <f:Border margin="20" borderColor="transparent">
      <f:layer>
         <f:Border height="60%">
            <f:layer>
               <g:ScrollPanel>
                  <e:RevisionGrid ui:field="revisionGrid" width="100%" height="100%"></e:RevisionGrid>
               </g:ScrollPanel>
            </f:layer>
         </f:Border>
      </f:layer>
      <f:layer height="70px" bottom="30">
         <g:FlowPanel>
            <g:RadioButton ui:field="softMode" name="ideRevertToCommitViewMode" text="{locale.resetSoftTypeTitle}" addStyleNames="{style.label}"
               width="100%"></g:RadioButton>
            <g:RadioButton ui:field="mixedMode" name="ideRevertToCommitViewMode" text="{locale.resetMixedTypeTitle}" addStyleNames="{style.label}"
               width="100%"></g:RadioButton>
            <g:RadioButton ui:field="hardMode" name="ideRevertToCommitViewMode" text="{locale.resetHardTypeTitle}" addStyleNames="{style.label}"
               width="100%"></g:RadioButton>
         </g:FlowPanel>
      </f:layer>
      <f:layer height="22px" bottom="0">
         <g:FlowPanel width="190px" styleName="{style.center}">
            <f:ImageButton ui:field="resetButton" width="90" height="22" text="{locale.buttonReset}" imageResource="{resource.ok}"
               disabledImageResource="{resource.okDisabled}" addStyleNames="{style.floatLeft}"></f:ImageButton>
            <g:FlowPanel width="5px" height="22px" styleName="{style.floatLeft}"></g:FlowPanel>
            <f:ImageButton ui:field="cancelButton" width="90" height="22" text="{locale.buttonCancel}" imageResource="{resource.cancel}"
               disabledImageResource="{resource.cancelDisabled}" addStyleNames="{style.floatLeft}"></f:ImageButton>
         </g:FlowPanel>
      </f:layer>

   </f:Border>
</ui:UiBinder>
