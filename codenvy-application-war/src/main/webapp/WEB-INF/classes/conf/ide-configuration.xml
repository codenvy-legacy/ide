<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://www.exoplaform.org/xml/ns/kernel_1_0.xsd http://www.exoplaform.org/xml/ns/kernel_1_0.xsd"
               xmlns="http://www.exoplaform.org/xml/ns/kernel_1_0.xsd">

    <!--
    ***************************************************************************************
    ********************** Codenvy IDE Commons Components *********************************
    ***************************************************************************************
    -->

    <component>
        <type>com.codenvy.ide.server.IdeUserApplication</type>
    </component>

    <!-- VirtualFileSystem -->
    <component>
        <type>com.codenvy.vfs.impl.fs.LocalFileSystemInitializer</type>
        <init-params>
            <values-param>
                <name>ids</name>
                <value>dev-monit</value>
                <value>tmp-dev-monit</value>
            </values-param>
        </init-params>
    </component>
    
    <component>
       <type>com.codenvy.api.vfs.server.VirtualFileSystemRegistry</type>
    </component>
    
    <component>
       <type>com.codenvy.api.vfs.server.VirtualFileSystemApplication</type>
    </component>

    <!-- End VirtualFileSystem -->

    <!-- LogReader -->
    <!-- End LogReader -->
    
     <!--
    ***************************************************************************************
    ********************************** OAuth Support **************************************
    ***************************************************************************************
    -->

    <component>
        <type>com.codenvy.commons.security.oauth.OAuthAuthenticationApplication</type>
    </component>

    <component>
        <key>com.codenvy.commons.security.oauth.OAuthTokenProvider</key>
        <type>com.codenvy.commons.security.oauth.OAuthAuthenticatorTokenProvider</type>
    </component>

    <component>
        <type>com.codenvy.ide.security.oauth.server.LabOAuthAuthenticatorProvider</type>
    </component>
    
    <!-- Git -->
    <component>
        <type>com.codenvy.ide.ext.git.server.rest.GitHubServiceApplication</type>
    </component>

    <component>
        <type>com.codenvy.ide.ext.git.server.nativegit.CredentialsLoader</type>
    </component>
    
    <component>
        <type>com.codenvy.ide.ext.git.server.github.GitHub</type>
        <init-params>
            <value-param>
                <name>github-user</name>
                <value>eXoIDE</value>
            </value-param>
        </init-params>
    </component>
    
    <component>
        <type>com.codenvy.ide.ext.git.server.nativegit.OAuthCredentialsProvider</type>
    </component>
    
    <component>
        <type>com.codenvy.ide.ext.git.server.nativegit.SshKeysManager</type>
    </component>
    
    <component>
        <key>com.codenvy.ide.ext.git.server.GitConnectionFactory</key>
        <type>com.codenvy.ide.ext.git.server.nativegit.NativeGitConnectionFactory</type>
    </component>

    <component>
        <type>com.codenvy.ide.ext.git.server.rest.GitApplication</type>
    </component>

    <component>
        <type>com.codenvy.ide.ext.git.server.GitIgnoreConfigChecker</type>
    </component>
    
    <!-- End Git -->

    <!--
    ***************************************************************************************
    ********************** Language & Technology Supporting *******************************
    ***************************************************************************************
    -->

    <!--
    ***************************************************************************************
    ********************************** OAuth Support **************************************
    ***************************************************************************************
    -->

</configuration>