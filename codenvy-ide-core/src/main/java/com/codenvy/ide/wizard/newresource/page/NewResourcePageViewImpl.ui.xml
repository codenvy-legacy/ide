<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:with field='res' type='com.codenvy.ide.Resources'/>
    <ui:style>
        .alignLeft {
            float: left;
        }

        .space {
            margin-top: 6px;
            margin-bottom: 6px;
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" width="100%" height="100%">
        <g:north size="32.0">
            <g:FlowPanel width="100%" height="100%" addStyleNames="{style.space}">
                <g:Label text="Resource name:" addStyleNames="{style.alignLeft}"/>
                <g:TextBox width="85%" height="16px" alignment="LEFT" ui:field="resourceName" textAlignment="ALIGN_LEFT"
                           addStyleNames="{style.alignLeft}"/>
            </g:FlowPanel>
        </g:north>
        <g:north size="20.0">
            <g:Label text="Choose a resource type:" addStyleNames="{res.coreCss.mainText}"/>
        </g:north>
        <g:center>
            <g:ScrollPanel ui:field="resources" addStyleNames="{res.coreCss.simpleListContainer}"/>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>