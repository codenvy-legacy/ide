<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field='res' type='com.codenvy.ide.Resources'/>
    <ui:with field='locale' type='com.codenvy.ide.CoreLocalizationConstant'/>
    <ui:style src="com/codenvy/ide/api/ui/style.css" type="com.codenvy.ide.wizard.project.ProjectWizardViewImpl.Style">
        @eval bgTopPanel com.codenvy.ide.api.ui.theme.Style.getConsolePanelColor();
        .project {
            /*margin-right: 8px;*/
            margin-top: 4px;
            margin-left: 5px;
        }

        .projectNamePosition {
            position: relative;
            line-height: 29px;
            margin-left: 9px;
            font-weight: 700;
            float: left;
            font-size: 12px;
        }

        .topPanel {
            height: 38px;
            border-top: 1px solid #232323;
            border-bottom: 1px solid #232323;
            z-index: 4;
            background-color: bgTopPanel;
            font-size: 12px;
        }

        .bottomPanel {
            height: 39px;
            border-top: 1px solid rgba(188, 195, 199, 0.5);
            z-index: 4;
            background-color: dialogContentBackground;
            font-size: 12px;
        }

        .namePanel, .namePanelRight {
            border-right: 1px solid tabBorder;
            box-shadow: 1px 0px 0px 0px tabBorderShadow;
            position: relative;
            top: -1px;
            overflow: hidden;
            display: inline-block;
            /*background-color: dialogContentBackground ;*/

        }

        .namePanelRight {
            border-right: none;
            box-shadow: 0px 0px 0 0 tabBorderShadow;
        }

        .rootPanel {
            position: relative;
            text-shadow: 0 1px 0 rgba(0, 0, 0, 0.5);
        }

        .privacy {
            display: inline-block;
            margin-top: 8px;
            margin-left: 5px;
        }

        .privacy label {
            padding-left: 17px;
        }

        .tab {
            left: 0px;
            top: 0px;
            right: 0px;
            bottom: 0px;
            position: absolute !important;
        }

        .buttonLikePanelLeft, .buttonLikePanelRight {
            cursor: pointer;
            background-color: toolbarBackgroundColor;
            width: 26px;
            position: absolute;
        }

        .centerPanel {
            position: relative;
            box-shadow: 0 -1px 0 0 tabBorder;
        }

        .svgStyle, .svgRotated {
            width: 26px;
            height: 24px;
            position: relative;
            top: 200px;
        }

        .button, .blueButton {
            float: right;
            border-radius: 1px;
            height: 28px;
            min-width: 65px;
            text-shadow: 0 1px 0 rgba(0, 0, 0, 0.5);
        }

        .button {
            margin: 5px;
        }

        .blueButton {
            background: linear-gradient(to bottom, #497bae 0, #497bae 1px, #3a68a2 1px, #3a68a2 100%);
            margin: 5px 25px 0px 8px;
        }

        .disabled {
            opacity: 0.4;
        }

        .labelPanel {
            float: left;
            display: block;
            font-size: 11px;
        }

        .labelPanel > div {
            margin-top: 4px;
        }

        .bottomPanel > div {
            margin-top: 9px;
        }

        .infoText {
            margin-left: 10px;
        }

        .infoText a {
            color: #66CD00;
        }

        .infoText a:hover {
            color: #7FFF00;
        }

        .infoValue {
            margin-left: 2px;
            margin-right: 20px;
        }

        .visible {
            visibility: visible;
        }

        .hidden {
            visibility: hidden;
        }

        .grayColor {
            color: #818181;
        }
    </ui:style>
    <g:FlowPanel width="774px" height="550px" addStyleNames="{style.rootPanel}">
        <g:FlowPanel width="774px" height="470px" addStyleNames="{style.centerPanel}">
            <g:SimplePanel ui:field="wizardPanel" addStyleNames="{style.tab}"/>
        </g:FlowPanel>
        <g:FlowPanel addStyleNames="{style.topPanel} {style.grayColor}">
            <g:FlowPanel ui:field="environmentConfigurationPanel" addStyleNames="{style.hidden}">
                <g:FlowPanel addStyleNames="{style.labelPanel}">
                    <g:Label text="Builder Environment Configuration" addStyleNames="{style.infoText}"/>
                    <g:Label text="Runer Environment Configuration" addStyleNames="{style.infoText}"/>
                </g:FlowPanel>
                <g:FlowPanel addStyleNames="{style.labelPanel}">
                    <g:Label ui:field="builderEnvironmentConfiguration"/>
                    <g:Label ui:field="runerEnvironmentConfiguration"/>
                </g:FlowPanel>
            </g:FlowPanel>
        </g:FlowPanel>
        <g:FlowPanel addStyleNames="{style.bottomPanel}">
            <g:Button ui:field="saveButton" text="CREATE" addStyleNames="{style.blueButton}"/>
            <g:Button ui:field="nextStepButton" text="Next" addStyleNames="{style.button}"/>
            <g:Button ui:field="previousStepButton" text="Previous" addStyleNames="{style.button}"/>
            <g:FlowPanel ui:field="infoRAMPanel" addStyleNames="{style.hidden}">
                <g:FlowPanel addStyleNames="{style.labelPanel}">
                    <g:Label text="RAM Required:" addStyleNames="{style.infoText}"/>
                </g:FlowPanel>
                <g:FlowPanel addStyleNames="{style.labelPanel}">
                    <g:Label ui:field="RAMRequired" addStyleNames="{style.infoValue}"/>
                </g:FlowPanel>
                <g:FlowPanel addStyleNames="{style.labelPanel}">
                    <g:Label text="RAM Available:" addStyleNames="{style.infoText}"/>
                </g:FlowPanel>
                <g:FlowPanel addStyleNames="{style.labelPanel}">
                    <g:Label ui:field="RAMAvailable" addStyleNames="{style.infoValue}"/>
                </g:FlowPanel>
                <g:FlowPanel addStyleNames="{style.labelPanel}">
                    <g:HTMLPanel ui:field="linkGetMoreRAM" addStyleNames="{style.infoText}">
                        <a href="{locale.createProjectFromTemplatelinkGetMoreRAM}">Get More RAM</a>
                    </g:HTMLPanel>
                </g:FlowPanel>
            </g:FlowPanel>
        </g:FlowPanel>
    </g:FlowPanel>
</ui:UiBinder>