<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:c="urn:import:com.codenvy.ide.ui">
    <ui:with field='res' type='com.codenvy.ide.wizard.WizardResource'/>
    <ui:style>
        .alignBtn {
            float: right;
        }

        .space {
            margin-right: 5px;
        }

        .emptyBorder {
            margin: 6px;
        }

        .centralPage {
            margin-top: 10px;
            margin-bottom: 10px;
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" width="700px" height="500px" addStyleNames="{style.emptyBorder}">
        <g:south size="40.0">
            <g:FlowPanel addStyleNames="{style.emptyBorder}">
                <g:FlowPanel height="100%" width="100%">
                    <c:Button text="Cancel" icon="{res.cancel}" width="60px" size="SMALL" addStyleNames="{style.alignBtn}"
                              ui:field="btnCancel"/>
                    <c:Button text="Finish" icon="{res.ok}" width="60px" size="SMALL" addStyleNames="{style.alignBtn} {style.space}"
                              ui:field="btnFinish"/>
                    <c:Button text="Back" icon="{res.back}" width="60px" size="SMALL" addStyleNames="{style.alignBtn} {style.space}"
                              ui:field="btnBack"/>
                    <c:Button text="Next" icon="{res.next}" width="60px" size="SMALL" addStyleNames="{style.alignBtn} {style.space}"
                              ui:field="btnNext"/>
                </g:FlowPanel>
            </g:FlowPanel>
        </g:south>
        <g:north size="48">
            <g:DockLayoutPanel unit="PX" width="100%" height="100%">
                <g:east size="48">
                    <g:SimplePanel width="100%" height="100%" ui:field="imagePanel"/>
                </g:east>
                <g:north size="20.0">
                    <g:Label text="" ui:field="caption" width="100%" height="20px" addStyleNames="{res.wizardCSS.mainBoldFont}"/>
                </g:north>
                <g:center>
                    <g:Label text="" width="100%" height="28px" ui:field="notice" addStyleNames="{res.wizardCSS.errorFont}"/>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
        <g:center>
            <g:DeckLayoutPanel width="100%" height="100%" ui:field="contentPanel" addStyleNames="{style.centralPage}"/>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder> 