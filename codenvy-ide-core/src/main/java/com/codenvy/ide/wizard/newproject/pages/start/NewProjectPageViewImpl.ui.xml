<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:with field='res' type='com.codenvy.ide.Resources'/>
    <ui:with field='locale' type='com.codenvy.ide.CoreLocalizationConstant'/>
    <ui:style>
        .spaceRight {
            margin-right: 8px;
        }

        .projectNamePosition {
            position: relative;
            line-height: 25px;
            margin-left: 20px;

        }

        .projectPrivacyPosition {
            margin-left: 20px;

        }

        .clearLeft {
            clear: left;
        }

        .emptyBorder {
            border: 0px;
        }

        .emptyBackground {
            /*background: #ffffff;*/
        }

        .privacyDescription {
            margin-left: 23px;
            font-size: 10px;
            color: #8e8e8e;
        }

        @eval bgCol com.codenvy.ide.api.ui.theme.Style.getMainFontColor();
        @eval fontColor com.codenvy.ide.api.ui.theme.Style.getWindowContentBackground();
        .technology {
            background-color: bgCol;
            color: fontColor;
            font-weight: bold;
            padding-left: 18px;
            padding-top: 2px;
        }
    </ui:style>

    <g:DockLayoutPanel unit="PX" width="100%" height="100%">
        <g:north size="50">
            <g:DockLayoutPanel unit="PX" width="100%" height="100%">
                <g:west size="138">
                    <g:FlowPanel>
                        <g:Label text="{locale.createProjectFromTemplateName}"
                                 addStyleNames="{style.projectNamePosition}"/>
                    </g:FlowPanel>
                </g:west>
                <g:center>
                    <g:SimplePanel addStyleNames="{style.spaceRight}">
                        <g:SimplePanel>
                            <g:TextBox width="390px" height="20px" ui:field="projectName" debugId="file-newProject-projectName"/>
                        </g:SimplePanel>
                    </g:SimplePanel>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
        <g:north size="91">
            <g:DockLayoutPanel unit="PX">
                <g:west size="138">
                    <g:FlowPanel>
                        <g:Label text="{locale.createProjectFromTemplateDescription}"
                                 addStyleNames="{style.projectNamePosition}"/>
                    </g:FlowPanel>
                </g:west>
                <g:center>
                    <g:SimplePanel addStyleNames="{style.spaceRight}">
                        <g:SimplePanel>
                            <g:TextArea width="686px" height="66px" ui:field="projectDescription" debugId="file-newProject-projectDescription"/>
                        </g:SimplePanel>
                    </g:SimplePanel>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
        <g:north size="42">
            <g:DockLayoutPanel unit="PX">
                <g:west size="138">
                    <g:FlowPanel>
                        <g:Label text="{locale.createProjectFromTemplateProjectPrivacy}"
                                 addStyleNames="{style.projectPrivacyPosition}"/>
                    </g:FlowPanel>
                </g:west>
                <g:west size="340">
                    <g:FlowPanel>
                        <g:RadioButton name="privacy" text="{locale.createProjectFromTemplatePublic}" height="13px" checked="true" debugId="file-newProject-public"/>
                        <g:Label addStyleNames="{style.privacyDescription}" text="{locale.createProjectFromTemplatePublicDescription}"/>
                    </g:FlowPanel>
                </g:west>
                <g:west size="340">
                    <g:FlowPanel>
                        <g:RadioButton name="privacy" text="{locale.createProjectFromTemplatePrivate}" height="13px" debugId="file-newProject-private"/>
                        <g:Label addStyleNames="{style.privacyDescription}" text="{locale.createProjectFromTemplatePrivateDescription}"/>
                    </g:FlowPanel>
                </g:west>
            </g:DockLayoutPanel>
        </g:north>
        <g:north size="19">
            <g:Label text="{locale.chooseTechnology}"
                     addStyleNames="{style.technology}"/>
        </g:north>
        <g:center>
            <g:SimplePanel ui:field="techPanel"
                           addStyleNames="{res.coreCss.mainFont} {style.emptyBorder}"/>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder> 