<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:with field='res' type='com.codenvy.ide.Resources'/>
    <ui:with field='locale' type='com.codenvy.ide.CoreLocalizationConstant'/>
    <ui:style>
        .alignLeft {
            float: left;
        }

        .spaceRight {
            margin-right: 8px;
        }

        .title {
            margin-top: 10px;
            margin-bottom: 10px;
        }

        .questionImage {
            position: relative;
            float: left;
            margin-left: 10px;
            margin-top: 7px;
            top: 3px;
        }

        .projectNamePosition {
            position: relative;
            top: 4px;
        }

        .clearLeft {
            clear: left;
        }

        .emptyBorder {
            border: 0px;
        }

        .emptyBackground {
            /*background: #ffffff;*/
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" width="100%" height="100%">
        <g:north size="50">
            <g:FlowPanel addStyleNames="{res.coreCss.line}">
                <g:DockLayoutPanel unit="PX" width="100%" height="100%">
                    <g:west size="100">
                        <g:FlowPanel>
                            <g:Label text="{locale.createProjectFromTemplateName}"
                                     addStyleNames="{res.coreCss.mainBoldFont} {style.projectNamePosition}"/>
                        </g:FlowPanel>
                    </g:west>
                    <g:center>
                        <g:SimplePanel addStyleNames="{style.spaceRight}">
                            <g:SimplePanel>
                                <g:TextBox width="100%" height="16px" ui:field="projectName"/>
                            </g:SimplePanel>
                        </g:SimplePanel>
                    </g:center>
                </g:DockLayoutPanel>
            </g:FlowPanel>
        </g:north>
        <g:north size="140">
            <g:FlowPanel addStyleNames="{res.coreCss.line}">
                <g:Label text="{locale.chooseTechnology}"
                         addStyleNames="{style.title} {res.coreCss.mainBoldFont} {style.alignLeft}"/>
                <g:Image ui:field="chooseTechnologyTooltip" resource="{res.question}"
                         addStyleNames="{style.questionImage} {res.coreCss.cursorPointer} {style.alignLeft}"/>
                <g:SimplePanel ui:field="techPanel"
                               addStyleNames="{res.coreCss.mainFont} {style.clearLeft} {style.emptyBorder} {style.emptyBackground}"/>
            </g:FlowPanel>
        </g:north>
        <g:north size="140">
            <g:FlowPanel addStyleNames="{res.coreCss.line}">
                <g:Label text="{locale.choosePaaS}"
                         addStyleNames="{style.title} {res.coreCss.mainBoldFont} {style.alignLeft}"/>
                <g:Image ui:field="choosePaaSTooltip" resource="{res.question}"
                         addStyleNames="{style.questionImage} {res.coreCss.cursorPointer} {style.alignLeft}"/>
                <g:SimplePanel ui:field="paasPanel"
                               addStyleNames="{res.coreCss.mainFont} {style.clearLeft} {style.emptyBorder} {style.emptyBackground}"/>
            </g:FlowPanel>
        </g:north>
    </g:DockLayoutPanel>
</ui:UiBinder> 