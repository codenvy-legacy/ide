<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field='locale' type='com.codenvy.ide.CoreLocalizationConstant'/>
    <ui:style>
        .alignBtn {
            float: right;
        }

        .emptyBorder {
            margin: 6px;
        }

        .space {
            margin-right: 5px;
        }

        .spacing {
            margin-bottom: 10px;
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" width="350px" height="75px" addStyleNames="{style.emptyBorder}">
        <g:south size="26.0">
            <g:FlowPanel>
                <g:Button addStyleNames="{style.alignBtn}" text="{locale.cancelButton}" width="60px"
                          ui:field="btnCancel" debugId="uploadFileView-btn-cancel"/>
                <g:Button addStyleNames="{style.alignBtn} {style.space}" text="{locale.uploadButton}" width="60px"
                          ui:field="btnUpload" debugId="uploadFileView-btn-upload"/>
            </g:FlowPanel>
        </g:south>
        <g:north size="50.0">
            <g:DockLayoutPanel unit="PX" width="100%" height="100%" styleName="{style.spacing}">
                <g:north size="20.0">
                    <g:Label text="{locale.openFileFieldTitle}"/>
                </g:north>
                <g:center>
                    <g:FormPanel ui:field="uploadForm" debugId="uploadFileView-formPanel-uploadForm"/>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
    </g:DockLayoutPanel>
</ui:UiBinder>