<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:c='urn:import:com.google.gwt.user.cellview.client'
             xmlns:my='urn:import:com.codenvy.ide.jseditor.client.preference'>

    <ui:with type="com.codenvy.ide.jseditor.client.preference.EditorPrefLocalizationConstant" field="constants" />
    <ui:with type="com.codenvy.ide.jseditor.client.preference.EditorPreferenceResource.CellStyle" field="cellStyle" />
    <ui:with type="com.codenvy.ide.jseditor.client.preference.EditorPreferenceResource.CellTableStyle" field="tableStyle" />

    <ui:style src="com/codenvy/ide/api/ui/style.css">
        .section {
            margin-top: 1em;
            margin-bottom: 0.2em;
            font-size: titleFontSize;
        }
        .tables {
            min-width: fill-available; 
            min-width: -webkit-fill-available; 
        }
    </ui:style>

    <g:HTMLPanel>
        <g:Label addStyleNames="{style.section}" text="{constants.editorsMappingSectionLabel}" />
        <table class="{style.tables}">
            <tr>
                <td class="{cellStyle.prefCell} {cellStyle.firstColumn} {tableStyle.cellTableCell}">
                    <ui:text from="{constants.defaultEditorLabel}" />
                </td>
                <td class="{cellStyle.prefCell} {tableStyle.cellTableCell}">
                    <g:ValueListBox ui:field="defaultEditorSelection" addStyleNames="{cellStyle.selectWidth}" />
                </td>
            </tr>
        </table>
    </g:HTMLPanel>
</ui:UiBinder>
