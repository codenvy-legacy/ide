<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.codenvy</groupId>
        <artifactId>maven-parent-pom</artifactId>
        <version>3.0.1</version>
    </parent>
    <groupId>com.codenvy.ide</groupId>
    <artifactId>codenvy-ide-parent</artifactId>
    <version>3.0.0-M7-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>Codenvy :: Parent</name>
    <scm>
        <connection>scm:git:git@github.com:codenvy/ide2.git</connection>
        <developerConnection>scm:git:git@github.com:codenvy/ide2.git</developerConnection>
        <tag>HEAD</tag>
    </scm>

    <properties>
        <ant.version>1.9.1</ant.version>

        <exo.product.name>codenvy-ide</exo.product.name>

        <!-- Codenvy -->
        <com.codenvy.commons.version>0.12.0-SNAPSHOT</com.codenvy.commons.version>
        <com.codenvy.organization.version>0.10.0-SNAPSHOT</com.codenvy.organization.version>
        <com.codenvy.platform-api.version>0.6.0-SNAPSHOT</com.codenvy.platform-api.version>

        <!-- eXo -->
        <org.exoplatform.kernel.version>2.3.9-GA</org.exoplatform.kernel.version>
        <org.exoplatform.core.version>2.4.9-GA</org.exoplatform.core.version>

        <org.exoplatform.ide.version>2.8.1</org.exoplatform.ide.version>

        <!-- CodeAssistant DataBase -->
        <codenvy.ide-codeassistant-index.version>20120627</codenvy.ide-codeassistant-index.version>

        <!-- EverREST -->
        <everrest.version>1.1.7-SNAPSHOT</everrest.version>

        <!-- javax -->
        <javax.annotation.version>1.0</javax.annotation.version>
        <javax.validation.version>1.0.0.GA</javax.validation.version>
        <javax.ws.version>1.0</javax.ws.version>
        <javax.ws.rs.version>1.0</javax.ws.rs.version>

        <!-- GWT -->
        <gwt.version>2.5.1</gwt.version>
        <gwt.maven.plugin.version>2.5.1</gwt.maven.plugin.version>
        <gwt.test.skip>true</gwt.test.skip>

        <!-- Testing libraries -->
        <junit.version>4.7</junit.version>
        <mockito.version>1.9.5</mockito.version>
        <gwt-test-utils.version>0.45</gwt-test-utils.version>
        <org.easytesting.fest-assert.version>1.4</org.easytesting.fest-assert.version>

        <!-- Logging libraries -->
        <ch.qos.logback.version>0.9.29</ch.qos.logback.version>
        <org.slf4j.version>1.6.2</org.slf4j.version>

        <!-- Third parties -->
        <appengine.version>1.7.7</appengine.version>
        <aws.sdk.version>1.3.17</aws.sdk.version>
        <commons-fileupload.version>1.2.1</commons-fileupload.version>
        <commons-io.version>2.4</commons-io.version>
        <commons-codec.version>1.6</commons-codec.version>
        <commons.compress.version>1.6</commons.compress.version>
        <jgit.version>2.3.1.201302201838-r</jgit.version>
        <jsch.version>0.1.44-1</jsch.version>
        <servlet-api.version>3.0.1</servlet-api.version>
        <org.apache.lucene.version>2.9.4</org.apache.lucene.version>
        <gin.version>2.1.2</gin.version>
        <guava.version>12.0.1</guava.version>
        <gson.version>2.1</gson.version>
        <antlr.version>3.3</antlr.version>
        <qdox-patched.version>1.12-eXo01</qdox-patched.version>
        <reflections.version>0.9.9-RC1</reflections.version>
        <tomcat.version>7.0.37</tomcat.version>
        <maven-model.version>3.0.5</maven-model.version>

        <failsafe.plugin.version>2.6</failsafe.plugin.version>
        <buildnumber.plugin.version>1.1</buildnumber.plugin.version>
        <enforcer.plugin.version>1.0.1</enforcer.plugin.version>
        <release.plugin.version>2.2.1</release.plugin.version>

        <maven.compiler.source>1.7</maven.compiler.source>
        <maven.compiler.target>1.7</maven.compiler.target>
        <maven.releases.repo.url>https://maven.codenvycorp.com/content/repositories/codenvy-private-releases/</maven.releases.repo.url>
        <maven.snapshots.repo.url>https://maven.codenvycorp.com/content/repositories/codenvy-private-snapshots/</maven.snapshots.repo.url>
        <maven.build.timestamp.format>dd.MM.yy HH:mm</maven.build.timestamp.format>
        <buildNumber>${maven.build.timestamp}</buildNumber>
    </properties>

    <modules>
        <module>codenvy-ide-commons</module>
        <module>codenvy-ide-api</module>
        <module>codenvy-ide-vfs-fs</module>
        <module>codenvy-ide-core</module>
        <module>codenvy-maven-tools</module>
        <module>codenvy-ant-tools</module>
        <module>codenvy-builder-maven</module>
        <module>codenvy-builder-ant</module>
        <module>codenvy-runner-docker</module>
        <module>codenvy-sdk-api-war</module>
        <module>codenvy-runner-sdk</module>
        <module>codenvy-runner-webapps</module>
        <module>codenvy-api-war</module>
        <module>codenvy-ext-builder</module>
        <module>codenvy-ext-runner</module>
        <module>codenvy-ext-web</module>
        <module>codenvy-ext-java</module>
        <!--module>codenvy-ext-java-runtime</module-->
        <module>codenvy-ext-git</module>
        <module>codenvy-ext-ssh</module>
        <module>codenvy-ext-github</module>
        <module>codenvy-ext-extensions</module>
        <module>codenvy-ide-security</module>
        <module>codenvy-ide-client</module>
        <module>codenvy-ext-tutorials</module>
        <module>codenvy-sdk-tutorials/action-api</module>
        <module>codenvy-sdk-tutorials/wizard-api</module>
        <module>codenvy-sdk-tutorials/parts-api</module>
        <module>codenvy-sdk-tutorials/notification-api</module>
        <module>codenvy-sdk-tutorials/new-project-wizard</module>
        <module>codenvy-sdk-tutorials/new-resource-wizard</module>
        <module>codenvy-sdk-tutorials/editor-api</module>
        <module>codenvy-sdk-tutorials/gin</module>
        <module>codenvy-sdk-tutorials/gist-ext</module>
        <module>codenvy-sdk-tutorials/wysiwyg-editor</module>
        <module>../codenvy-datasource-plugin</module>
        <module>codenvy-application-war</module>
        <module>codenvy-ide-site-war</module>
        <module>codenvy-sdk-private-dependencies</module>
        <module>codenvy-sdk-tools</module>
        <module>codenvy-packaging-standalone-tomcat</module>
    </modules>

    <build>
        <extensions>
            <extension>
                <groupId>org.apache.maven.wagon</groupId>
                <artifactId>wagon-ssh</artifactId>
                <version>2.1</version>
            </extension>
            <extension>
                <groupId>org.apache.maven.wagon</groupId>
                <artifactId>wagon-http</artifactId>
                <version>2.1</version>
            </extension>
            <extension>
                <groupId>org.apache.maven.wagon</groupId>
                <artifactId>wagon-file</artifactId>
                <version>2.1</version>
            </extension>
        </extensions>

        <pluginManagement>
            <plugins>
                <!-- prevent older version of maven-compiler-plugin being used, avoid issues with ubuntu maven package -->
                <plugin>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <version>3.1</version>
                    <configuration>
                        <source>1.7</source>
                        <target>1.7</target>
                    </configuration>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-war-plugin</artifactId>
                    <version>2.1.1</version>
                </plugin>
                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>exec-maven-plugin</artifactId>
                    <version>1.2.1</version>
                </plugin>
                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>build-helper-maven-plugin</artifactId>
                    <version>1.8</version>
                </plugin>
                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>build-helper-maven-plugin</artifactId>
                    <version>1.8</version>
                </plugin>
                <plugin>
                    <groupId>com.codenvy.platform-api</groupId>
                    <artifactId>codenvy-dto-maven-plugin</artifactId>
                    <version>${com.codenvy.platform-api.version}</version>
                </plugin>

                <!--This plugin's configuration is used to store Eclipse m2e settings only. It has no influence on the Maven build itself.-->
                <plugin>
                    <groupId>org.eclipse.m2e</groupId>
                    <artifactId>lifecycle-mapping</artifactId>
                    <version>1.0.0</version>
                    <configuration>
                        <lifecycleMappingMetadata>
                            <pluginExecutions>
                                <pluginExecution>
                                    <pluginExecutionFilter>
                                        <groupId>org.codehaus.mojo</groupId>
                                        <artifactId>exec-maven-plugin</artifactId>
                                        <versionRange>[1.2.1,)</versionRange>
                                        <goals>
                                            <goal>java</goal>
                                        </goals>
                                    </pluginExecutionFilter>
                                    <action>
                                        <ignore />
                                    </action>
                                </pluginExecution>
                                <pluginExecution>
                                    <pluginExecutionFilter>
                                        <groupId>com.codenvy.platform-api</groupId>
                                        <artifactId>codenvy-dto-maven-plugin</artifactId>
                                        <versionRange>[0.4.0-SNAPSHOT,)</versionRange>
                                        <goals>
                                            <goal>generate</goal>
                                        </goals>
                                    </pluginExecutionFilter>
                                    <action>
                                        <ignore></ignore>
                                    </action>
                                </pluginExecution>
                                <pluginExecution>
                                    <pluginExecutionFilter>
                                        <groupId>org.apache.maven.plugins</groupId>
                                        <artifactId>maven-dependency-plugin</artifactId>
                                        <versionRange>[2.6,)</versionRange>
                                        <goals>
                                            <goal>copy</goal>
                                        </goals>
                                    </pluginExecutionFilter>
                                    <action>
                                        <ignore></ignore>
                                    </action>
                                </pluginExecution>
                            </pluginExecutions>
                        </lifecycleMappingMetadata>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>

    <profiles>
        <profile>
            <!-- Used to build default-version (non-SDK) of Codenvy -->
            <id>default-version</id>
            <activation>
                <property>
                    <name>!sdk</name>
                </property>
            </activation>
            <modules>
                <module>codenvy-ide-site-war</module>
                <module>codenvy-application-war</module>
                <module>codenvy-packaging-standalone-tomcat</module>
            </modules>
        </profile>
        <profile>
            <!-- Used to build Codenvy Platform SDK -->
            <id>sdk-version</id>
            <activation>
                <property>
                    <name>sdk</name>
                </property>
            </activation>
            <modules>
                <module>codenvy-ext-tutorials</module>
                <module>codenvy-ext-extensions-runtime</module>
                <module>codenvy-sdk-application-war</module>
                <module>codenvy-sdk-private-dependencies</module>
                <module>codenvy-sdk-packaging-standalone-tomcat</module>
            </modules>
        </profile>
    </profiles>
</project>
