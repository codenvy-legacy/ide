<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:c='urn:import:com.codenvy.ide.ui'>
    <ui:with field='locale' type='com.codenvy.ide.ext.git.client.GitLocalizationConstant'/>
    <ui:with field='res' type='com.codenvy.ide.ext.git.client.GitResources'/>
    <ui:with field='coreRes' type='com.codenvy.ide.Resources'/>
    <ui:style>
        .alignBtn {
            float: right;
        }

        .emptyBorder {
            margin: 6px;
        }

        .space {
            margin-right: 5px;
        }

        .spacing {
            margin-top: 10px;
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" width="350px" height="300px" addStyleNames="{style.emptyBorder}">
        <g:south size="36.0">
            <g:FlowPanel addStyleNames="{style.spacing}">
                <c:Button addStyleNames="{style.alignBtn}" text="{locale.buttonCancel}" width="60px" size="SMALL" type="DANGER"
                          ui:field="btnCancel"/>
                <c:Button addStyleNames="{style.alignBtn} {style.space}" text="{locale.buttonMerge}" width="60px" size="SMALL"
                          type="SUCCESS" ui:field="btnMerge"/>
            </g:FlowPanel>
        </g:south>
        <g:center>
            <g:ScrollPanel ui:field="referencesPanel" addStyleNames="{coreRes.coreCss.simpleListContainer}"/>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>