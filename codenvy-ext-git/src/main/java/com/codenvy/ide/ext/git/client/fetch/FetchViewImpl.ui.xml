<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field='locale' type='com.codenvy.ide.ext.git.client.GitLocalizationConstant'/>
    <ui:with field='res' type='com.codenvy.ide.ext.git.client.GitResources'/>
    <ui:style>
        .alignBtn {
            float: right;
        }

        .alignLeft {
            float: left;
        }

        .emptyBorder {
            margin: 10px;
        }

		.emptySmallBorder {
            margin: 5px;
        }

        .space {
            margin-right: 5px;
        }

        .image {
            position: relative;
            top: 24px;
            float: left;
        }

		.textAlignMiddle{
			line-height: 20px;	
		}
    </ui:style>
    <g:DockLayoutPanel unit="PX" width="450px" height="165px" addStyleNames="{style.emptyBorder}">
        <g:south size="26.0">
            <g:FlowPanel>
                <g:Button addStyleNames="{style.alignBtn}" text="{locale.buttonCancel}" width="60px"
                          ui:field="btnCancel"/>
                <g:Button addStyleNames="{style.alignBtn} {style.space}" text="{locale.buttonFetch}" width="60px" ui:field="btnFetch"/>
            </g:FlowPanel>
        </g:south>
        <g:north size="26.0">
            <g:FlowPanel>
                <g:Label width="160px" height="22px" text="{locale.fetchRemoteFieldTitle}" addStyleNames="{res.gitCSS.textFont} {style.alignLeft} {style.textAlignMiddle}"/>
                <g:ListBox width="290px" ui:field="repository" addStyleNames="{res.gitCSS.textFont} {style.alignLeft}"/>
            </g:FlowPanel>
        </g:north>
        <g:north size="25.0">
            <g:CheckBox ui:field="removeDeletedRefs" HTML="{locale.fetchRemoveDeletedRefsTitle}" addStyleNames="{res.gitCSS.textFont}"/>
        </g:north>
        <g:north size="30.0">
            <g:CheckBox ui:field="fetchAllBranches" HTML="{locale.fetchAllBranchesTitle}" addStyleNames="{res.gitCSS.textFont}"/>
        </g:north>
        <g:center>
            <g:DockLayoutPanel unit="PCT" width="100%" height="100%">
                <g:east size="48">
                    <g:FlowPanel addStyleNames="{style.emptySmallBorder}">
                        <g:Label text="{locale.fetchLocalBranchesTitle}" width="100%"/>
                        <g:ListBox ui:field="localBranch" width="100%"/>
                    </g:FlowPanel>
                </g:east>
                <g:west size="48">
                    <g:FlowPanel addStyleNames="{style.emptySmallBorder}">
                        <g:Label text="{locale.fetchRemoteBranchesTitle}" width="100%"/>
                        <g:ListBox ui:field="remoteBranch" width="100%"/>
                    </g:FlowPanel>
                </g:west>
                <g:center>
                    <g:FlowPanel>
                        <g:Image resource="{res.arrow}" addStyleNames="{style.image}"/>
                    </g:FlowPanel>
                </g:center>
            </g:DockLayoutPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>