<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component">
    <ui:with field='resource' type='org.exoplatform.ide.extension.samples.client.SamplesClientBundle'/>
    <ui:with field='locale' type='org.exoplatform.ide.extension.samples.client.SamplesLocalizationConstant'/>
    <ui:style>
        .center {
            margin-left: auto;
            margin-right: auto;
        }

        .left-float {
            float: left;
        }

        .label {
            margin-top: 7px;
            margin-left: 10px;
            font-size: 11px;
            font-family: Verdana, Bitstream Vera Sans, sans-serif;
            float: right;
            height: 64px;
            width: 78%;
        }

        .space {
            margin-top: 10px;
        }
    </ui:style>
    <f:Border margin="15" borderColor="transparent">
        <f:layer top="0" bottom="30">
            <g:FlowPanel>
                <g:Image resource="{resource.gitHubLogo}" width="64px" height="64" styleName="{style.left-float}"></g:Image>
                <f:Label ui:field="label" value="{locale.loginOAuthLabel}" isHTML="true" styleName="{style.label}"></f:Label>
            </g:FlowPanel>
        </f:layer>
        <f:layer height="22px" bottom="0">
            <g:FlowPanel width="215px" styleName="{style.center}">
                <f:ImageButton ui:field="oauthButton" width="120px" height="22" text="{locale.okButton}" imageResource="{resource.gitHub}"
                               disabledImageResource="{resource.gitHubDisabled}" addStyleNames="{style.left-float}"></f:ImageButton>
                <g:FlowPanel width="5px" height="22px" styleName="{style.left-float}"></g:FlowPanel>
                <f:ImageButton ui:field="cancelButton" width="90px" height="22" text="{locale.cancelButton}"
                               imageResource="{resource.cancel}"
                               disabledImageResource="{resource.cancelDisabled}" addStyleNames="{style.left-float}"></f:ImageButton>
            </g:FlowPanel>
        </f:layer>
    </f:Border>
</ui:UiBinder> 