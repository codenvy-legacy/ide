<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit 2.0//EN"
        "http://google-web-toolkit.googlecode.com/svn/releases/2.0/distro-source/core/src/gwt-module.dtd">
<module>
    <source path="client"/>
    <source path="shared"/>
    <source path="json"/>
    <source path="mvp"/>
    <source path="dto"/>
    <source path="codemirror2"/>
    <source path="dotgen"/>
    <source path="dtogen"/>

    <inherits name="com.google.gwt.user.User"/>
    <inherits name="elemental.Elemental"/>
    <inherits name="com.codenvy.ide.Collaboration"/>
    <inherits name="com.codenvy.ide.notification.Notification"/>
    <inherits name="com.codenvy.ide.client.util.Util"/>

    <inherits name="com.google.common.base.Base"/>
    <inherits name="com.google.common.collect.Collect"/>
    <inherits name="com.google.common.annotations.Annotations"/>

    <inherits name="org.waveprotocol.wave.model.Model"/>

    <inherits name='org.exoplatform.ide.editor.API'/>
    <inherits name='org.exoplatform.ide.client.framework.IDEClientFramework'/>
    <inherits name='com.google.collide.Views'/>
    <entry-point class="com.google.collide.client.CollabEditorExtension"/>
    <inherits name="com.codenvy.ide.client.scheduler.Scheduler"/>
    <inherits name="com.codenvy.ide.dtogen.DtoGen"/>
    <inherits name="com.codenvy.ide.json.Json"/>
    <inherits name="com.codenvy.ide.commons.Commons"/>

    <!-- This provides deferred binding for the client windowing system.
 This can be used to make labels for "native" accelerators, etc. -->
    <define-property name="webide.clientOs" values="macintosh,windows,x11,other"/>
    <!-- Restrict the build to Chrome, FF and english only for now. -->
    <set-property name="user.agent" value="safari,gecko1_8"/>
    <property-provider name="webide.clientOs"><![CDATA[
    var ua = navigator.userAgent.toLowerCase();
    if (ua.indexOf("(macintosh;") != -1) {
      return "macintosh";
    } else if (ua.indexOf("(windows;") != -1) {
      return "windows";
    } else if (ua.indexOf("(x11;") != -1) {
      return "x11";
    } else {
      return "other";
    }
  ]]></property-provider>

    <replace-with class="com.codenvy.ide.client.util.BrowserUtils.Chrome">
        <when-type-is class="com.codenvy.ide.client.util.BrowserUtils"/>
        <when-property-is name="user.agent" value="safari"/>
    </replace-with>

    <replace-with class="com.codenvy.ide.client.util.BrowserUtils.Firefox">
        <when-type-is class="com.codenvy.ide.client.util.BrowserUtils"/>
        <when-property-is name="user.agent" value="gecko1_8"/>
    </replace-with>

    <!-- replace-with rules for client environment. -->
    <replace-with class="com.google.collide.client.ClientOsOther">
        <when-type-is class="com.google.collide.client.ClientOs"/>
    </replace-with>

    <replace-with class="com.google.collide.client.ClientOsMacintosh">
        <when-type-is class="com.google.collide.client.ClientOs"/>
        <when-property-is name="webide.clientOs" value="macintosh"/>
    </replace-with>



</module>
