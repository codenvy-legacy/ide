<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:org.exoplatform.gwtframework.ui.client.component">

   <ui:with type="org.exoplatform.ide.client.IDEImageBundle" field="res"></ui:with>
   <ui:style>
      .center {
      	margin-left: auto;
      	margin-right: auto;
      }
      
      .floatLeft {
      	float: left;
      }
      
      .labelH {
      	margin-right: 5px;
      	font-size: 11px;
      	font-family: Verdana, Bitstream Vera Sans, sans-serif;
      	float: left;
      }
   </ui:style>

   <c:Border margin="15" borderColor="transparent">
      <c:layer top="0" height="84px">
         <g:FlowPanel width="200px" styleName="{style.center}">
            <g:Image resource='{res.ideLogo}' width="200px"></g:Image>
         </g:FlowPanel>
      </c:layer>

      <c:layer top="90" bottom="30">
         <g:FlowPanel width="80%" styleName="{style.center}">
            <g:FlowPanel width="100%" height="28px">
               <g:Label text="User ID:" addStyleNames="{style.labelH}" width="20%"></g:Label>
               <c:TextInput ui:field="loginField" width="77%" height="22px" addStyleNames="{style.floatLeft}"></c:TextInput>
            </g:FlowPanel>
            <g:FlowPanel width="100%" height="28px">
               <g:Label text="Password:" addStyleNames="{style.labelH}" width="20%"></g:Label>
               <c:PasswordTextInput ui:field="passwordField" width="77%" height="22px" addStyleNames="{style.floatLeft}"></c:PasswordTextInput>
            </g:FlowPanel>
         </g:FlowPanel>
      </c:layer>

      <c:layer height="30px" bottom="0">
         <g:FlowPanel width="190px" styleName="{style.center}">
            <c:ImageButton ui:field="loginButton" width="90px" buttonId="ideLoginViewLoginButton" text="Login" imageName="ok"
               addStyleNames="{style.floatLeft}"></c:ImageButton>
            <g:FlowPanel width="5px" height="22px" styleName="{style.floatLeft}"></g:FlowPanel>
            <c:ImageButton ui:field="cancelButton" text="Cancel" width="90px" buttonId="ideLoginViewCancelButton" imageName="cancel"
               styleName="{style.floatLeft}"></c:ImageButton>
         </g:FlowPanel>
      </c:layer>
   </c:Border>

</ui:UiBinder>
