<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
   xmlns:c="urn:import:org.exoplatform.gwtframework.ui.client.component" xmlns:n="urn:import:org.exoplatform.ide.client.outline.ui">

   <ui:style>
      .outlineTree {
      	z-index: 0;
      	width: 100%;
      	height: 100%;
      }
   </ui:style>

   <g:LayoutPanel>
      <g:layer width="100%" height="100%">
         <c:Border ui:field="outlineTreeGridPanel" margin="1">
            <c:layer>
               <g:ScrollPanel>

                  <g:FlowPanel>

                     <n:OutlineTreeGrid styleName="{style.outlineTree}" ui:field="outlineTreeGrid" treeGridId="ideOutlineTreeGrid"
                        visible="false"></n:OutlineTreeGrid>

                     <g:HTMLPanel ui:field="outlineDisabledPanel" width="100%" height="100%">
                        <table style="width:100%; height:100%;">
                           <tr style="vertical-align:middle;">
                              <td style="text-align:center;">An outline is not available.</td>
                           </tr>
                        </table>
                     </g:HTMLPanel>

                  </g:FlowPanel>

               </g:ScrollPanel>
            </c:layer>
         </c:Border>
      </g:layer>
   </g:LayoutPanel>


</ui:UiBinder>
