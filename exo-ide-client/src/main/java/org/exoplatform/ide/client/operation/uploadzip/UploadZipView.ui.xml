<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component"
   xmlns:up="urn:import:org.exoplatform.ide.client.framework.ui.upload">

   <ui:with field="uploadLocale" type="org.exoplatform.ide.client.messages.IdeUploadLocalizationConstant"></ui:with>
   <ui:with field="ideLocale" type="org.exoplatform.ide.client.IdeLocalizationConstant"></ui:with>

   <ui:style>
      .absolute {
      position: absolute;
      left: 0px;
      top: 0px;
      }

      .defaultCursor {
      cursor: default;
      }

      .spacing {
      margin-top: 20px;
      margin-left: 15px;
      margin-right: 15px;
      }

      .center {
      display: block;
      margin-left: auto;
      margin-right: auto;
      }

      .floatLeft {
      float: left;
      }

      .spacingLeft {
      margin-left: 2px;
      }
      
   </ui:style>

   <g:LayoutPanel>
      <g:layer top="0" bottom="40px">
         <g:DockLayoutPanel unit="PX" height="60px" addStyleNames="{style.spacing}">
            <g:north size="30">
               <f:Label value="{uploadLocale.folderToUpload}"></f:Label>
            </g:north>
            <g:center>
               <f:TextInput ui:field="fileNameField" width="100%" height="22px" name="ideUploadFormFilenameField" readOnly="true"></f:TextInput>
            </g:center>
            <g:east size="85">
               <g:AbsolutePanel width="80px" height="22px" addStyleNames="{style.spacingLeft}">
                  <f:ImageButton width="80px" height="22px" text="{uploadLocale.uploadBrowseBtn}" addStyleNames="{style.absolute}"></f:ImageButton>

                  <g:FormPanel addStyleNames="{style.absolute}" ui:field="uploadForm">
                     <g:HorizontalPanel ui:field="postFieldsPanel">
                        <up:FileUploadInput ui:field="fileUploadInput" width="80px" height="22px" transparent="true"
                           addStyleNames="{style.defaultCursor}"></up:FileUploadInput>
                     </g:HorizontalPanel>
                  </g:FormPanel>

               </g:AbsolutePanel>
            </g:east>
         </g:DockLayoutPanel>
      </g:layer>

      <g:layer height="40px" bottom="0">
         <g:FlowPanel width="190px" styleName="{style.center}">
            <f:ImageButton ui:field="uploadButton" text="{uploadLocale.uploadButton}" width="90" height="22" addStyleNames="{style.floatLeft}"
               imageName="upload" buttonId="ideUploadFormUploadButton"></f:ImageButton>
            <g:FlowPanel width="5px" height="22px" styleName="{style.floatLeft}"></g:FlowPanel>

            <f:ImageButton ui:field="cancelButton" width="90" height="22" text="{ideLocale.closeButton}" addStyleNames="{style.floatLeft}"
               imageName="cancel" buttonId="ideUploadFormCloseButton"></f:ImageButton>
         </g:FlowPanel>
      </g:layer>

   </g:LayoutPanel>

</ui:UiBinder>
