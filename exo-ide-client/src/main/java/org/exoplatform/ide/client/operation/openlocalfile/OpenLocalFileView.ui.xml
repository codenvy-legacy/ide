<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
   xmlns:c="urn:import:org.exoplatform.gwtframework.ui.client.component" xmlns:up="urn:import:org.exoplatform.ide.client.framework.ui.upload">
   <ui:with field="ideUploadLocale" type="org.exoplatform.ide.client.messages.IdeUploadLocalizationConstant"></ui:with>
   <ui:with field="ideLocale" type="org.exoplatform.ide.client.IdeLocalizationConstant"></ui:with>

   <ui:style>
      .absolute {
      	position: absolute;
      	left: 0px;
      	top: 0px;
      }
      
      .defaultCursor {
      	cursor: default;
      }
      
      .labels {
      	cursor: default;
      	font-family: Verdana, Bitstream Vera Sans, sans-serif;
      	font-size: 11px;
      	font-style: normal;
      	font-weight: normal;
      }
      
      .spacing {
         margin-bottom: 15px;
      }
   </ui:style>
   
   <c:Border margin="20" borderColor="transparent">
      <c:layer>
         <g:FlowPanel>
            <g:FlowPanel height="100px" width="100%" styleName="{style.spacing}">
               <g:HTMLPanel>
                  <table style="width:100%; height:100%;" border="0" cellpadding="0">

                     <tr>
                        <td colspan="2" style="vertical-align: middle;" class="{style.labels}">
                           <c:Label text="{ideUploadLocale.fileToOpen}"></c:Label>
                        </td>
                     </tr>

                     <tr>
                        <td width="100%">
                           <c:TextInput width="100%" ui:field="fileNameField" readOnly="true"></c:TextInput>
                        </td>

                        <td style="width:80px;">
                           <g:AbsolutePanel width="80px" height="22px">
                              <c:ImageButton width="80px" height="22px" text="Browse" addStyleNames="{style.absolute}"></c:ImageButton>

                              <g:FormPanel addStyleNames="{style.absolute}" ui:field="uploadForm">
                                 <g:HorizontalPanel ui:field="postFieldsPanel">
                                    <up:FileUploadInput ui:field="fileUploadInput" width="80px" height="22px"
                                       transparent="true" addStyleNames="{style.defaultCursor}"></up:FileUploadInput>
                                 </g:HorizontalPanel>
                              </g:FormPanel>

                           </g:AbsolutePanel>
                        </td>
                     </tr>

                     <tr>
                        <td colspan="2" style="vertical-align: middle;" class="{style.labels}">
                           <c:Label text="{ideUploadLocale.uploadFileMimeType}"></c:Label>
                        </td>
                     </tr>

                     <tr>
                        <td colspan="2">
                           <c:ComboBoxField ui:field="mimeTypesField" name="ideUploadFormMimeTypeField"
                              pickListHeight="100" width="100%"></c:ComboBoxField>
                        </td>
                     </tr>

                  </table>
               </g:HTMLPanel>
               <g:FlowPanel width="40px"></g:FlowPanel>
            </g:FlowPanel>

            <g:HorizontalPanel spacing="5" height="24px" width="100%">
               <g:cell horizontalAlignment='ALIGN_RIGHT' verticalAlignment="ALIGN_MIDDLE">
                  <c:ImageButton ui:field="openButton" text="{ideUploadLocale.openButton}" imageName="upload"
                     buttonId="ideUploadFormUploadButton"></c:ImageButton>
               </g:cell>

               <g:cell horizontalAlignment='ALIGN_LEFT' verticalAlignment="ALIGN_MIDDLE">
                  <c:ImageButton ui:field="cancelButton" text="{ideLocale.cancelButton}" imageName="cancel"
                     buttonId="ideUploadFormCloseButton"></c:ImageButton>
               </g:cell>
            </g:HorizontalPanel>

         </g:FlowPanel>
      </c:layer>
   </c:Border>

</ui:UiBinder>
 