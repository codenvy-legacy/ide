<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
   xmlns:c="urn:import:org.exoplatform.gwtframework.ui.client.component" xmlns:hk="urn:import:org.exoplatform.ide.client.hotkeys">
   <ui:with type="org.exoplatform.ide.client.IdeLocalizationConstant" field="idelocal"></ui:with>
   <ui:with type="org.exoplatform.ide.client.messages.IdePreferencesLocalizationConstant" field="idePrefs"></ui:with>

   <ui:style>
      .table {
      	width: 100%;
      	height: 100%;
      	border-collapse: collapse;
      }
   </ui:style>

   <g:LayoutPanel>
      <g:layer bottom ="50px" top="0px">
         <c:Border margin="5">
            <c:layer width="100%" height="100%">
               <hk:HotKeyItemListGrid ui:field="hotKeyItemListGrid" width="100%" height="100%"></hk:HotKeyItemListGrid>
            </c:layer>
         </c:Border>
      </g:layer>
      <g:layer height="50px" bottom ="0px">
         <g:HTMLPanel height="50px">
            <table class="{style.table}" border="0" sellpadding="0" cellspacing="0">

               <tr>
                  <td style="width:2px;">
                     <div style="width:2px; height:1px;"></div>
                  </td>

                  <td colspan="9">
                     <g:Label ui:field="messageLabel">Select command and bind hot key.</g:Label>
                  </td>

                  <td style="width:2px;">
                     <div style="width:2px; height:1px;"></div>
                  </td>
               </tr>

               <tr>
                  <td style="width:2px;">
                     <div style="width:2px; height:1px;"></div>
                  </td>

                  <td>
                     <c:TextInput ui:field="hotKeyField"  width="100px"  height="22px"></c:TextInput>
                  </td>

                  <td style="width:3px;">
                     <div style="width:3px; height:1px;"></div>
                  </td>

                  <td>
                     <c:ImageButton text="{idePrefs.customizeHotkeysBindButton}" imageName="yes" ui:field="bindButton"
                        enabled="false" buttonId="ideCustomizeHotKeysViewBindButton"></c:ImageButton>
                  </td>

                  <td style="width:3px;">
                     <div style="width:3px; height:1px;"></div>
                  </td>

                  <td>
                     <c:ImageButton text="{idePrefs.customizeHotkeysUnbindButton}" imageName="no" ui:field="unbindButton"
                        enabled="false" buttonId="ideCustomizeHotKeysViewUnbindButton"></c:ImageButton>
                  </td>

                  <td style="width:100%;">
                     <div style="width:1px; height:1px;"></div>
                  </td>

                  <td>
                     <c:ImageButton text="{idelocal.okButton}" imageName="ok" ui:field="okButton" enabled="false"
                        buttonId="ideCustomizeHotKeysViewOkButton"></c:ImageButton>
                  </td>

                  <td style="width:3px;">
                     <div style="width:3px; height:1px;"></div>
                  </td>

                  <td>
                     <c:ImageButton text="{idelocal.cancelButton}" imageName="cancel" ui:field="cancelButton"
                        buttonId="ideCustomizeHotKeysViewCancelButton"></c:ImageButton>
                  </td>

                  <td style="width:2px;">
                     <div style="width:2px; height:1px;"></div>
                  </td>
               </tr>

               <tr style="height:5px;">
                  <td colspan="11">
                     <div style="width:1px; height:5px;"></div>
                  </td>
               </tr>

            </table>
         </g:HTMLPanel>
      </g:layer>
   </g:LayoutPanel>

</ui:UiBinder>
