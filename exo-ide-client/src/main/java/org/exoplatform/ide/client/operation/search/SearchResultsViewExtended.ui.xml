<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
   xmlns:c="urn:import:org.exoplatform.gwtframework.ui.client.component" xmlns:n="urn:import:org.exoplatform.ide.client.framework.ui">

   <ui:style>
      .itemsTree {
      	z-index: 0;
      	width: 100%;
      	height: 100%;
      }
   </ui:style>

   <c:Border margin="1">
      <c:layer>
         <g:ScrollPanel>
            <n:ItemTree styleName="{style.itemsTree}" ui:field="treeGrid" prefixId="search-" treeGridId="ideSearchResultItemTreeGrid"></n:ItemTree>
         </g:ScrollPanel>
      </c:layer>
   </c:Border>

</ui:UiBinder>
 