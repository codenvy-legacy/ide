<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        @eval tabsPanelBackground com.codenvy.ide.api.ui.theme.Style.getTabsPanelBackground();
        .infoPanel {
            background: tabsPanelBackground;
        }

        .infoLabel {
            padding-left: 15px;
            padding-right: 15px;
            border-right: 1px solid #232323;
            font-size: 11px;
        }

        .inline {
            display: inline;
        }

        .url {
            padding-left: 5px;
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" width="100%" height="100%">
        <g:north size="20">
            <g:FlowPanel width="100%" height="100%" addStyleNames="{style.infoPanel}">
                <g:FlowPanel addStyleNames="{style.infoLabel} {style.inline}">
                    <g:InlineLabel text="Artifact URL:"/>
                    <g:Anchor ui:field="downloadURL" target="_blank" addStyleNames="{style.url}"/>
                </g:FlowPanel>
            </g:FlowPanel>
        </g:north>
        <g:center>
            <g:ScrollPanel width="100%" height="100%" ui:field="scrollPanel">
                <g:FlowPanel width="100%" height="100%" ui:field="consoleArea"/>
            </g:ScrollPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>
