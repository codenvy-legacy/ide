<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:org.exoplatform.gwtframework.ui.client.component">
   <ui:with field='resource' type='org.exoplatform.ide.extension.cloudfoundry.client.CloudFoundryClientBundle' />
   <ui:with field="locale" type="org.exoplatform.ide.extension.cloudfoundry.client.CloudFoundryLocalizationConstant"></ui:with>

   <ui:style>
      .close {
      	margin-right: auto;
      }
      
      .left {
      	float: left;
      }
      
      .space {
      	margin-right: 5px;
      }
      
      .right {
      	float: right;
      }
      
      .labelH {
      	margin-right: 5px;
      	font-size: 11px;
      	font-family: Verdana, Bitstream Vera Sans, sans-serif;
      	float: left;
      	font-weight: bold;
      }
      
      .link {
      	font-size: 11px;
      	font-family: Verdana, Bitstream Vera Sans, sans-serif;
      	overflow-x: hidden;
      	white-space: nowrap;
      }
      
      .padding {
      	padding: 15px;
      }
      
      .actions {
      	border-top: 1px solid #DBDFE5;
      	padding-top: 5px;
      }
   </ui:style>
   <c:Border margin="15" borderColor="transparent">
      <c:layer top="0" bottom="40">
         <c:Border>
            <c:layer>
               <g:FlowPanel styleName="{style.padding}">
                  <g:FlowPanel width="100%" height="28px">
                     <g:Label text="{locale.manageProjectApplication}" addStyleNames="{style.labelH}" width="20%"></g:Label>
                     <c:TextInput ui:field="nameField" width="72%" height="22px" addStyleNames="{style.left} {style.space}"></c:TextInput>
                     <c:ImageButton ui:field="infoButton" width="22" height="22px" text="" styleName="{style.left}" imageResource="{resource.propertiesButton}"
                        disabledImageResource="{resource.propertiesButtonDisabled}" title="{locale.manageProjectProperties}"></c:ImageButton>
                  </g:FlowPanel>
                  <g:FlowPanel width="100%" height="28px">
                     <g:Label text="{locale.manageProjectUrls}" addStyleNames="{style.labelH}" width="20%"></g:Label>
                     <g:Anchor ui:field="urlField" width="72%" addStyleNames="{style.left} {style.link} {style.space}" target="_blank"></g:Anchor>
                     <c:ImageButton ui:field="editUrlsButton" width="24px" height="22px" text="..." styleName="{style.left}" title="more"></c:ImageButton>
                  </g:FlowPanel>
                  <g:FlowPanel width="100%" height="28px">
                     <g:Label text="{locale.manageProjectMemory}" addStyleNames="{style.labelH}" width="20%"></g:Label>
                     <c:TextInput ui:field="memoryField" width="72%" height="22px" addStyleNames="{style.left} {style.space}"></c:TextInput>
                     <c:ImageButton ui:field="editMemoryButton" width="22" height="22px" text="" styleName="{style.left}" imageResource="{resource.editButton}"
                        disabledImageResource="{resource.editButtonDisabled}" title="{locale.manageProjectEditMemory}"></c:ImageButton>
                  </g:FlowPanel>
                  <g:FlowPanel width="100%" height="28px">
                     <g:Label text="{locale.manageProjectInstances}" addStyleNames="{style.labelH}" width="20%"></g:Label>
                     <c:TextInput ui:field="instancesField" width="72%" height="22px" addStyleNames="{style.left} {style.space}"></c:TextInput>
                     <c:ImageButton ui:field="editInstancesButton" width="22" height="22px" text="" styleName="{style.left}"
                        imageResource="{resource.editButton}" disabledImageResource="{resource.editButtonDisabled}" title="{locale.manageProjectEditInstances}"></c:ImageButton>
                  </g:FlowPanel>
                  <g:FlowPanel width="100%" height="23px">
                     <g:Label text="{locale.manageProjectStack}" addStyleNames="{style.labelH}" width="20%"></g:Label>
                     <c:Label ui:field="stackField" addStyleNames="{style.left}"></c:Label>
                  </g:FlowPanel>
                  <g:FlowPanel width="100%" height="23px">
                     <g:Label text="{locale.manageProjectModel}" addStyleNames="{style.labelH}" width="20%"></g:Label>
                     <c:Label ui:field="modelField" addStyleNames="{style.left}"></c:Label>
                  </g:FlowPanel>
                  <g:FlowPanel width="100%" height="28px" styleName="{style.actions}">
                     <g:Label text="{locale.manageProjectStatus}" addStyleNames="{style.labelH}" width="20%"></g:Label>
                     <c:ImageButton ui:field="startButton" width="22" height="22px" text="" imageResource="{resource.startButton}"
                        disabledImageResource="{resource.startButtonDisabled}" title="{locale.manageProjectStart}" styleName="{style.left} {style.space}"></c:ImageButton>
                     <c:ImageButton ui:field="stopButton" width="22" height="22px" text="" imageResource="{resource.stopButton}"
                        disabledImageResource="{resource.stopButtonDisabled}" title="{locale.manageProjectStop}" styleName="{style.left} {style.space}"></c:ImageButton>
                     <c:ImageButton ui:field="restartButton" width="22" height="22px" text="" imageResource="{resource.restartButton}"
                        disabledImageResource="{resource.restartButtonDisabled}" title="{locale.manageProjectRestart}" styleName="{style.left}"></c:ImageButton>
                  </g:FlowPanel>
                  <g:FlowPanel width="100%" height="28px" styleName="{style.actions}">
                     <g:Label text="{locale.manageProjectActions}" addStyleNames="{style.labelH}" width="20%"></g:Label>
                     <g:Button ui:field="updateButton" height="20px" width="70px" text="{locale.updateButton}" styleName="{style.left} {style.space}"></g:Button>
                     <g:Button ui:field="deleteButton" height="20px" width="70px" text="{locale.deleteButton}" styleName="{style.left}"></g:Button>
                  </g:FlowPanel>
               </g:FlowPanel>
            </c:layer>
         </c:Border>
      </c:layer>
      <c:layer height="22px" bottom="0">
         <g:FlowPanel>
            <c:ImageButton ui:field="closeButton" imageName="cancel" width="90px" height="22px" text="{locale.closeButton}" styleName="{style.right}"></c:ImageButton>
         </g:FlowPanel>
      </c:layer>
   </c:Border>
</ui:UiBinder>
