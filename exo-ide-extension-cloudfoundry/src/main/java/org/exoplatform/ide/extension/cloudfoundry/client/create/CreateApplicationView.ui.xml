<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
xmlns:g="urn:import:com.google.gwt.user.client.ui" 
xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component">

   <ui:with field='resource' type='org.exoplatform.ide.extension.cloudfoundry.client.CloudFoundryClientBundle' />
   <ui:with field="locale" type="org.exoplatform.ide.extension.cloudfoundry.client.CloudFoundryLocalizationConstant"></ui:with>

   <ui:style>
      .floatLeft {
      float: left;
      }

      .floatRight {
      float: right;
      }

      .center {
      display: block;
      margin-left: auto;
      margin-right: auto;
      }

      .spacing {
      margin-bottom: 10px;
      }
   </ui:style>

   <f:Border margin="15" borderColor="transparent">
      <f:layer>
         <g:FlowPanel>
            <g:DockLayoutPanel width="100%" unit="PX" height="13%">
               <g:west size="140">
                  <g:Label text="{locale.createAppServerField}" height="18px"></g:Label>
               </g:west>
               <g:center>
                  <f:ComboBoxField ui:field="serverField" height="20px" pickListHeight="100" width="100%"></f:ComboBoxField>
               </g:center>
               <g:east size="90">
                  <g:FlowPanel></g:FlowPanel>
               </g:east>
            </g:DockLayoutPanel>
            <g:DockLayoutPanel width="100%" unit="PX" height="13%">
               <g:west size="140">
                  <g:Label text="{locale.createAppNameField}" height="18px"></g:Label>
               </g:west>
               <g:center>
                  <f:TextInput ui:field="nameField" height="20px" width="100%"></f:TextInput>
               </g:center>
               <g:east size="90">
                  <g:FlowPanel></g:FlowPanel>
               </g:east>
            </g:DockLayoutPanel>
            <g:DockLayoutPanel width="100%" unit="PX" height="13%">
               <g:west size="140">
                  <g:Label text="{locale.createAppTypeField}" height="18px"></g:Label>
               </g:west>
               <g:center>
                  <f:SelectItem ui:field="typeField" width="100%" height="22px" name="projectTypeSelectItem"></f:SelectItem>
               </g:center>
               <g:east size="90">
                  <g:FlowPanel>
                     <g:CheckBox ui:field="changeTypeField" width="25px" addStyleNames="{style.floatLeft}"></g:CheckBox>
                     <g:Label text="{locale.createAppAutodetectTypeLabel}" addStyleNames="{style.floatRight}"></g:Label>
                  </g:FlowPanel>
               </g:east>
            </g:DockLayoutPanel>

            <g:DockLayoutPanel width="100%" unit="PX" height="13%">
               <g:west size="140">
                  <g:Label text="{locale.createAppUrlField}" height="18px"></g:Label>
               </g:west>
               <g:center>
                  <f:TextInput ui:field="urlField" width="100%" height="20px" enabled="false"></f:TextInput>
               </g:center>
               <g:east size="90">
                  <g:FlowPanel>
                     <g:CheckBox ui:field="customUrlField" width="25px" height="22px" addStyleNames="{style.floatLeft}"></g:CheckBox>
                     <g:Label text="{locale.createAppUseDefaultUrlLabel}" addStyleNames="{style.floatRight}"></g:Label>
                  </g:FlowPanel>
               </g:east>
            </g:DockLayoutPanel>

            <g:DockLayoutPanel width="100%" unit="PX" height="13%">
               <g:west size="140">
                  <g:Label text="{locale.createAppInstancesField}" height="18px"></g:Label>
               </g:west>
               <g:center>
                  <f:TextInput ui:field="instansesField" width="100%" height="20px"></f:TextInput>
               </g:center>
               <g:east size="90">
                  <g:FlowPanel></g:FlowPanel>
               </g:east>
            </g:DockLayoutPanel>

            <g:DockLayoutPanel width="100%" unit="PX" height="13%">
               <g:west size="140">
                  <g:Label text="{locale.createAppMemoryField}" height="18px"></g:Label>
               </g:west>
               <g:center>
                  <f:TextInput ui:field="memoryField" width="100%" height="20px" enabled="false"></f:TextInput>
               </g:center>
               <g:east size="90">
                  <g:FlowPanel></g:FlowPanel>
               </g:east>
            </g:DockLayoutPanel>

            <g:DockLayoutPanel width="100%" unit="PX" height="13%" addStyleNames="{style.spacing}">
               <g:west size="140">
                  <g:Label text="{locale.createAppStartAfterCreationField}" height="18px"></g:Label>
               </g:west>
               <g:center>
                  <g:CheckBox ui:field="startAfterCreationField" width="100%"></g:CheckBox>
               </g:center>
               <g:east size="90">
                  <g:FlowPanel></g:FlowPanel>
               </g:east>
            </g:DockLayoutPanel>
         </g:FlowPanel>
      </f:layer>
      <f:layer height="30px" bottom="0">
         <g:FlowPanel width="190px" styleName="{style.center}">
            <f:ImageButton ui:field="createButton" width="90" height="22" text="{locale.createButton}" addStyleNames="{style.floatLeft}"
               imageResource="{resource.okButton}" disabledImageResource="{resource.okButtonDisabled}"></f:ImageButton>
            <g:FlowPanel width="5px" height="22px" styleName="{style.floatLeft}"></g:FlowPanel>
            <f:ImageButton ui:field="cancelButton" width="90" height="22" text="{locale.cancelButton}" addStyleNames="{style.floatLeft}"
               imageResource="{resource.cancelButton}" disabledImageResource="{resource.cancelButtonDisabled}"></f:ImageButton>
         </g:FlowPanel>
      </f:layer>

   </f:Border>
</ui:UiBinder> 