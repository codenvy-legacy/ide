                    <artifactId>exo.core.component.security.core</artifactId>
                    <version>${org.exoplatform.core.version}</version>
                </dependency>

            </dependencies>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-resources-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>copy-prod-resources</id>
                                <phase>process-resources</phase>
                                <goals>
                                    <goal>copy-resources</goal>
                                </goals>
                                <configuration>
                                    <outputDirectory>target/war/</outputDirectory>
                                    <resources>
                                        <resource>
                                            <directory>src/main/webapp/shell/</directory>
                                            <filtering>true</filtering>
                                        </resource>
                                    </resources>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>gwt-maven-plugin</artifactId>
                        <configuration>
                            <runTarget>Shell/Shell.html</runTarget>
                            <hostedWebapp>${basedir}/target/war</hostedWebapp>
                            <logLevel>INFO</logLevel>
                            <skipTests>${gwt.test.skip}</skipTests>
                            <port>${gwt.port}</port>
                            <bindAddress>0.0.0.0</bindAddress>
                            <extraJvmArgs>-Dorg.exoplatform.ide.server.fs-root-path=target/git</extraJvmArgs>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
