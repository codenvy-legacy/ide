<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component">

    <ui:with field='resource' type='com.codenvy.ide.extension.android.client.AndroidExtensionClientBundle'/>

    <ui:style>
        .formLine {
            margin-top: 10px;
        }

        .innerBox {
            display: block;
            margin: 0 8px;
        }

        .title {
            height: 45px;
            display: block;
            width: 100%;
            border-bottom: 1px solid #ACACAC;
            margin-bottom: 30px;
            font-size: 14;
            font-weight: bold;
        }

        .label {
            float: left;
            margin-top: 10px;
        }
    </ui:style>
    <f:Border margin="10" borderColor="transparent">
        <f:layer>
            <g:FlowPanel stylePrimaryName="{style.innerBox}">
                <g:FlowPanel styleName="{style.title}">
                    <g:Label text="Deploy project to Manymo" styleName="{style.label}"></g:Label>
                </g:FlowPanel>
                <g:DockLayoutPanel width="100%" unit="PX" height="22px" stylePrimaryName="{style.formLine}">
                    <g:center>
                        <g:Label text="No properties to configure"></g:Label>
                    </g:center>
                </g:DockLayoutPanel>
            </g:FlowPanel>
        </f:layer>

    </f:Border>
</ui:UiBinder>