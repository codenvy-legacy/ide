<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
   xmlns:c="urn:import:org.exoplatform.gwtframework.ui.client.component">
   <ui:with type="org.exoplatform.ide.extension.ssh.client.SshLocalizationConstant" field="con"></ui:with>
   <ui:style>
      .center {
      	display: block;
      	margin-left: auto;
      	margin-right: auto;
      }
   </ui:style>
   <g:LayoutPanel>
      <g:layer top="0" bottom="43px">
         <c:Border margin="2">
            <c:layer>
               <g:TextArea ui:field="publicSshKeyField" name="exoSshPublicKeyField" width="100%" height="100%"></g:TextArea>
            </c:layer>
         </c:Border>
      </g:layer>
      <g:layer height="40px" bottom="0">
         <g:FlowPanel styleName="{style.center}" width="90px">
            <c:ImageButton text='{con.closeButton}' ui:field="closeButton" buttonId="ideSshKeyManagerCloseButton"></c:ImageButton>
         </g:FlowPanel>
      </g:layer>
   </g:LayoutPanel>
</ui:UiBinder>