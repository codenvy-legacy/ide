<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:c='urn:import:com.codenvy.ide.ui'>
    <ui:with field='locale' type='com.codenvy.ide.extension.cloudfoundry.client.CloudFoundryLocalizationConstant'/>
    <ui:with field='res' type='com.codenvy.ide.extension.cloudfoundry.client.CloudFoundryResources'/>
    <ui:style>
        .left {
            float: left;
        }

        .space {
            margin-right: 5px;
        }

        .right {
            float: right;
        }

        .labelH {
            margin-right: 5px;
            float: left;
        }

        .middle {
            margin-top: 3px;
        }

        .withoutPadding {
            padding: 0px;
        }

        .emptyBorder {
            margin: 6px;
        }

        .spacing {
            margin-bottom: 5px;
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" width="500px" height="280px" addStyleNames="{style.emptyBorder} {res.cloudFoundryCss.project}">
        <g:south size="26.0">
            <g:FlowPanel>
                <c:Button addStyleNames="{style.right}" text="{locale.closeButton}" size="SMALL" type="DANGER" ui:field="btnClose"/>
            </g:FlowPanel>
        </g:south>
        <g:north size="30.0">
            <g:DockLayoutPanel unit="PX" width="100%" addStyleNames="{style.spacing}">
                <g:west size="100.0">
                    <g:Label text="{locale.manageProjectApplication}"
                             addStyleNames="{style.labelH} {style.middle} {res.cloudFoundryCss.labelH}"/>
                </g:west>
                <g:east size="18.0">
                    <c:Button width="18px" height="16px" addStyleNames="{style.space} {style.withoutPadding}"
                              title="{locale.manageProjectProperties}" icon="{res.propertiesButton}" ui:field="btnInfo"/>
                </g:east>
                <g:center>
                    <g:TextBox height="16px" addStyleNames="{style.space} {res.cloudFoundryCss.textinput}" ui:field="applicationName"
                               width="365px" readOnly="true"/>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
        <g:north size="30.0">
            <g:DockLayoutPanel unit="PX" width="100%" addStyleNames="{style.spacing}">
                <g:west size="100.0">
                    <g:Label text="{locale.manageProjectUrls}" addStyleNames="{style.labelH} {style.middle} {res.cloudFoundryCss.labelH}"/>
                </g:west>
                <g:east size="18.0">
                    <c:Button width="18px" height="16px" text="..." addStyleNames="{style.left} {style.withoutPadding}" title="more"
                              ui:field="btnEditUrl"/>
                </g:east>
                <g:center>
                    <g:Anchor href="" addStyleNames="{style.left} {style.space} {res.cloudFoundryCss.link}" target="_blank" height="16px"
                              ui:field="url" width="365px"/>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
        <g:north size="30.0">
            <g:DockLayoutPanel unit="PX" width="100%" addStyleNames="{style.spacing}">
                <g:west size="100.0">
                    <g:Label text="{locale.manageProjectMemory}"
                             addStyleNames="{style.labelH} {style.middle} {res.cloudFoundryCss.labelH}"/>
                </g:west>
                <g:east size="18.0">
                    <c:Button width="18px" height="16px" addStyleNames="{style.left} {style.withoutPadding}"
                              title="{locale.manageProjectEditMemory}" icon="{res.editButton}" ui:field="btnEditMemory"/>
                </g:east>
                <g:center>
                    <g:TextBox addStyleNames="{style.left} {style.space} {res.cloudFoundryCss.textinput}" height="16px" ui:field="memory"
                               width="365px" readOnly="true"/>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
        <g:north size="30.0">
            <g:DockLayoutPanel unit="PX" width="100%" addStyleNames="{style.spacing}">
                <g:west size="100.0">
                    <g:Label text="{locale.manageProjectInstances}"
                             addStyleNames="{style.labelH} {style.middle} {res.cloudFoundryCss.labelH}"/>
                </g:west>
                <g:east size="18.0">
                    <c:Button width="18px" height="16px" addStyleNames="{style.left} {style.withoutPadding}"
                              title="{locale.manageProjectEditInstances}" icon="{res.editButton}" ui:field="btnEditInstances"/>
                </g:east>
                <g:center>
                    <g:TextBox addStyleNames="{style.left} {style.space} {res.cloudFoundryCss.textinput}" height="16px" ui:field="instances"
                               width="365px" readOnly="true"/>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
        <g:north size="30.0">
            <g:DockLayoutPanel unit="PX" width="100%" addStyleNames="{style.spacing}">
                <g:west size="100.0">
                    <g:Label text="{locale.manageProjectStack}" addStyleNames="{style.labelH} {res.cloudFoundryCss.labelH}"/>
                </g:west>
                <g:center>
                    <g:Label addStyleNames="{style.left} {res.cloudFoundryCss.labelH}" ui:field="stack"/>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
        <g:north size="30.0">
            <g:DockLayoutPanel unit="PX" width="100%" addStyleNames="{style.spacing}">
                <g:west size="100.0">
                    <g:Label text="{locale.manageProjectModel}" addStyleNames="{style.labelH} {res.cloudFoundryCss.labelH}"/>
                </g:west>
                <g:center>
                    <g:Label addStyleNames="{style.left} {res.cloudFoundryCss.labelH}" ui:field="model"/>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
        <g:north size="30.0">
            <g:DockLayoutPanel unit="PX" width="100%" addStyleNames="{style.spacing}">
                <g:west size="100.0">
                    <g:Label text="{locale.manageProjectStatus}" addStyleNames="{style.labelH} {res.cloudFoundryCss.labelH}"/>
                </g:west>
                <g:center>
                    <g:FlowPanel>
                        <g:Label addStyleNames="{style.left} {style.space} {style.middle} {res.cloudFoundryCss.labelH}"
                                 width="70px" ui:field="status"/>
                        <c:Button width="18px" height="16px" title="{locale.manageProjectStart}"
                                  addStyleNames="{style.left} {style.space} {style.withoutPadding}" icon="{res.startApp}"
                                  ui:field="btnStart"/>
                        <c:Button width="18px" height="16px" title="{locale.manageProjectStop}"
                                  addStyleNames="{style.left} {style.space} {style.withoutPadding}" icon="{res.stopApp}"
                                  ui:field="btnStop"/>
                        <c:Button width="18px" height="16px" title="{locale.manageProjectRestart}"
                                  addStyleNames="{style.left} {style.withoutPadding}" icon="{res.restartApp}" ui:field="btnRestart"/>
                    </g:FlowPanel>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
        <g:north size="30.0">
            <g:DockLayoutPanel unit="PX" width="100%" addStyleNames="{style.spacing}">
                <g:west size="100.0">
                    <g:Label text="{locale.manageProjectActions}" addStyleNames="{style.labelH} {res.cloudFoundryCss.labelH}"/>
                </g:west>
                <g:center>
                    <g:FlowPanel>
                        <c:Button size="SMALL" width="50px" text="{locale.updateButton}" addStyleNames="{style.left} {style.space}"
                                  ui:field="btnUpdate"/>
                        <c:Button size="SMALL" width="50px" text="{locale.deleteButton}" addStyleNames="{style.left} {style.space}"
                                  ui:field="btnDelete"/>
                        <c:Button size="SMALL" width="50px" text="{locale.servicesButton}" addStyleNames="{style.left} {style.space}"
                                  ui:field="btnServices"/>
                        <c:Button size="SMALL" width="50px" text="{locale.logsButton}" addStyleNames="{style.left}" ui:field="btnLogs"/>
                    </g:FlowPanel>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
    </g:DockLayoutPanel>
</ui:UiBinder> 