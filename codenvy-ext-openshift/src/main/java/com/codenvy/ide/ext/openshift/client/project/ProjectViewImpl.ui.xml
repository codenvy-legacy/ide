<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:c='urn:import:com.codenvy.ide.ui'>
    <ui:with field='constant' type='com.codenvy.ide.ext.openshift.client.OpenShiftLocalizationConstant'/>
    <ui:with field='res' type='com.codenvy.ide.ext.openshift.client.OpenShiftResources'/>
    <ui:style>
        .left {
            float: left;
        }

        .space {
            margin-right: 5px;
        }

        .right {
            float: right;
        }

        .labelH {
            margin-right: 5px;
            float: left;
        }

        .middle {
            margin-top: 3px;
        }

        .withoutPadding {
            padding: 0px;
        }

        .emptyBorder {
            margin: 6px;
        }

        .spacing {
            margin-bottom: 5px;
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" width="500px" height="180px" addStyleNames="{style.emptyBorder}">
        <g:south size="26.0">
            <g:FlowPanel>
                <c:Button addStyleNames="{style.right}" text="{constant.applicationInfoViewCloseButton}" size="SMALL" type="DANGER"
                          ui:field="btnClose" title="{constant.projectViewTitlePropertiesApp}"/>
            </g:FlowPanel>
        </g:south>
        <g:north size="30.0">
            <g:DockLayoutPanel unit="PX" width="100%" addStyleNames="{style.spacing}">
                <g:west size="100.0">
                    <g:Label text="Name" addStyleNames="{style.labelH} {style.middle}"/>
                </g:west>
                <g:east size="18.0">
                    <c:Button width="18px" height="16px" addStyleNames="{style.space} {style.withoutPadding}"
                              title="properties" ui:field="btnShowProperties" icon="{res.showProperties}"/>
                </g:east>
                <g:center>
                    <g:TextBox height="16px" addStyleNames="{style.space}" ui:field="appName"
                               width="365px" readOnly="true"/>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
        <g:north size="30.0">
            <g:DockLayoutPanel unit="PX" width="100%" addStyleNames="{style.spacing}">
                <g:west size="100.0">
                    <g:Label text="URL" addStyleNames="{style.labelH} {style.middle}"/>
                </g:west>
                <g:center>
                    <g:Anchor href="" addStyleNames="{style.left} {style.space}" target="_blank" height="16px"
                              ui:field="appUrl" width="365px"/>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
        <g:north size="30.0">
            <g:DockLayoutPanel unit="PX" width="100%" addStyleNames="{style.spacing}">
                <g:west size="100.0">
                    <g:Label text="Type" addStyleNames="{style.labelH} {style.middle}"/>
                </g:west>
                <g:center>
                    <g:Label addStyleNames="{style.left} {style.space}" height="16px" ui:field="appType"
                             width="365px"/>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
        <g:north size="30.0">
            <g:DockLayoutPanel unit="PX" width="100%" addStyleNames="{style.spacing}">
                <g:west size="100.0">
                    <g:Label text="Status" addStyleNames="{style.labelH}"/>
                </g:west>
                <g:center>
                    <g:FlowPanel>
                        <g:Label addStyleNames="{style.left} {style.space} {style.middle}"
                                 width="70px" ui:field="appHealth"/>
                        <c:Button width="18px" height="16px" title="start"
                                  addStyleNames="{style.left} {style.space} {style.withoutPadding}"
                                  ui:field="btnStart" icon="{res.startApp}"/>
                        <c:Button width="18px" height="16px" title="stop"
                                  addStyleNames="{style.left} {style.space} {style.withoutPadding}"
                                  ui:field="btnStop" icon="{res.stopApp}"/>
                        <c:Button width="18px" height="16px" title="restart"
                                  addStyleNames="{style.left} {style.withoutPadding}" ui:field="btnRestart" icon="{res.restartApp}"/>
                    </g:FlowPanel>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
        <g:north size="30.0">
            <g:DockLayoutPanel unit="PX" width="100%" addStyleNames="{style.spacing}">
                <g:west size="100.0">
                    <g:Label text="Action" addStyleNames="{style.labelH}"/>
                </g:west>
                <g:center>
                    <g:FlowPanel>
                        <c:Button width="70px" height="22px" title="Delete application from OpenShift"
                                  addStyleNames="{style.left} {style.withoutPadding}" ui:field="btnDelete" text="Delete"/>
                    </g:FlowPanel>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
    </g:DockLayoutPanel>
</ui:UiBinder>